{
  "name": "@bangladeshi/bangladesh-address",
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/rajuAhmed1705/bangladesh-address"
  },
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "clean": "del-cli ./build/*",
    "build": "npm run clean && tsc",
